<h1>Restaurants</h1>

<p><%= link_to 'Create new restaurant', new_restaurant_path %></p>
<% @restaurants.each do |r| %>
  <h3><%= link_to r.name, restaurant_path(r) %></h3>
  <p><%= r.address %></p>
  <p><%= r.category.capitalize %></p>
  <p><%= link_to 'Delete', restaurant_path(r), method: :delete, data: { confirm: "Delete #{r.name}?"} %></p>
<% end %>

